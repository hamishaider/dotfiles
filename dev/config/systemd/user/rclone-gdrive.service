[Unit]
Description=Mount Google Drive to ~/gdrive using rclone
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount gdrive:rclone-archlinux %h/gdrive \
  --vfs-cache-mode writes \
  --dir-cache-time 5m \
  --poll-interval 1m \
  --umask 002 \
  --allow-other

ExecStop=/bin/fusermount -u %h/gdrive
Restart=on-failure
RestartSec=10

[Install]
WantedBy=default.target
